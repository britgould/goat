<robot name="robot_arm">
  <link name="base_link">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <geometry>
        <cylinder length="2" radius="1"/>
      </geometry>
    </visual>
  </link>

  <link name="rotator">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <geometry>
        <cylinder length="2" radius="1"/>
      </geometry>
    </visual>
  </link>

  <joint name="base_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rotator"/>
    <origin xyz="0 0 2" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
  </joint>

  <link name="upper_arm">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0" />
      <geometry>
        <cylinder length="2" radius="2.0"/>
      </geometry>
    </visual>
  </link>

  <joint name="shoulder_joint" type="revolute">
    <parent link="rotator"/>
    <child link="upper_arm"/>
    <origin xyz="0 0 1" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" />
  </joint>

  <link name="forearm">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0" />
      <geometry>
        <cylinder length="2" radius="2.0"/>
      </geometry>
    </visual>
  </link>

  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <origin xyz="0 0 2" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" />
  </joint>

  <link name="hand">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0" />
      <geometry>
        <cylinder length="2" radius="2.0"/>
      </geometry>
    </visual>
  </link>

  <joint name="wrist_joint" type="revolute">
    <parent link="forearm"/>
    <child link="hand"/>
    <origin xyz="0 0 2" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" />
  </joint>

  <link name="fingers">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0" />
      <geometry>
        <cylinder length="2" radius="2.0"/>
      </geometry>
    </visual>
  </link>

  <joint name="twist_joint" type="revolute">
    <parent link="hand"/>
    <child link="fingers"/>
    <origin xyz="0 0 2" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
    <limit lower="-0.01" upper="0.01" />
   </joint>

  <link name="fingertips">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.05" radius="2.0"/>
      </geometry>
    </visual>
  </link>

  <joint name="last_joint" type="revolute">
    <parent link="fingers"/>
    <child link="fingertips"/>
    <origin xyz="0 0 2" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
    <limit lower="-0.01" upper="0.01" />
   </joint>

</robot>
